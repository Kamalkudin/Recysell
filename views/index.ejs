<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
    <!-- Boxicons -->
    <link
      href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css"
      rel="stylesheet"
    />
    <!-- Glide js -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.4.1/css/glide.core.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.4.1/css/glide.theme.css">
    <!-- Custom StyleSheet -->
    <link rel="stylesheet" href="./css/styles.css" />
    <title>Recysell</title>
  </head>
  <body>
    <!-- Header -->
    <header class="header" id="header">

      <div class="navigation">
        <div class="nav-center container d-flex">
        <a href="index.ejs" class="logo"><h1>Recysell</h1></a>

          <ul class="nav-list d-flex">
            <li class="nav-item">
              <a href="index.ejs" class="nav-link">Home</a>
            </li>
            <li class="nav-item">
              <a href="/carbon" class="nav-link">Shop</a>
            </li>
            <li class="nav-item">
              <a href="#footer" class="nav-link">About</a>
            </li>
            <li class="icons d-flex">
            <a href="login.html" class="icon">
              <i class="bx bx-user"></i>
            </a>
            <a href="cart.html" class="icon">
              <i class="bx bx-cart"></i>
              <span class="d-flex">0</span>
            </a>
          </li>
          </ul>

            <div class="icons d-flex">
              <a href="/dashboard" class="icon">
                <i class="bx bx-user"></i>
              </a>
            </div>

          <div class="hamburger">
            <i class="bx bx-menu-alt-left"></i>
          </div>
        </div>
      </div>

    <div class="hero">
      <div class="glide" id="glide_1">
        <div class="glide__track" data-glide-el="track">
          <ul class="glide__slides">
            <li class="glide__slide">
              <div class="center">
                <div class="left">
                  <!-- <span class="">New Inspiration 2020</span> -->
                  <h1 class="">MAKE EARTH A BETTER <br>PLACE TO LIVE!</h1>
                  <p>By buying our products you can reduce the amount of carbon footprint <br>from this earth</p>
                  <a href="product.html" class="hero-btn">SHOP NOW</a>
                </div>
                <div class="right">
                    <img class="img1" src="./images/crfoot.png" alt="">
                </div>
              </div>
            </li>
            <li class="glide__slide">
              <div class="center">
                <div class="left">
                  <!-- <span>New Inspiration 2020</span> -->
                  <h1>THE PERFECT MARKETPLACE <br>TO FIND! </h1>
                  <p>You can find the product what you're looking for in this marketplace</p>
                  <a href="#" class="hero-btn">SHOP NOW</a>
                </div>
                <div class="right">
                  <img class="img2" src="./images/e-commerce.png" alt="">
                </div>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
    </header>
    <!-- Categories Section -->
    <!-- New Arrivals -->
    <section class="section new-arrival">
        <div class="product-center">
            <% if (products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="product-item">
                        <div class="overlay">
                            <a href="/products/details/<%= product._id %>" class="product-thumb">

                                <img src="<%= product.image %>" alt="<%= product.name %>" />
                            </a>
                        </div>
                        <div class="product-info">
                            <a href="/productdetails/<%= product._id %>"><h3><%= product.name %></h3></a>
                            <p>Rp<%= product.price %></p>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No products available</p>
            <% } %>
        </div>
    </section>





    <!-- Featured -->




    <!-- Footer -->
    <footer class="footer">
      <div class="row">
        <div class="col d-flex">
          <h4>INFORMATION</h4>
          <a href="">About us</a>
          <a href="">Contact Us</a>
          <a href="">Term & Conditions</a>
          <a href="">Shipping Guide</a>
        </div>
        <div class="col d-flex">
          <h4>USEFUL LINK</h4>
          <a href="">Online Store</a>
          <a href="">Customer Services</a>
          <a href="">Promotion</a>
          <a href="">Top Brands</a>
        </div>
        <div class="col d-flex">
          <span><i class='bx bxl-facebook-square'></i></span>
          <span><i class='bx bxl-instagram-alt' ></i></span>
          <span><i class='bx bxl-github' ></i></span>
          <span><i class='bx bxl-twitter' ></i></span>
          <span><i class='bx bxl-pinterest' ></i></span>
        </div>
      </div>
    </footer>


  </body>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.4.1/glide.min.js"></script>
  <script src="./js/slider.js"></script>
  <script src="./js/index.js"></script>
</html>
