<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/checkout.css" />
    <title>Checkout</title>
</head>
<body>
    <!-- Navigation -->
    <div class="navigation">
        <div class="nav-center container d-flex">
            <a href="/index" class="logo"><h1>Recysell</h1></a>
            <ul class="nav-list d-flex">

            </ul>
            <div class="icons d-flex">

            </div>
            <div class="hamburger"><i class="bx bx-menu-alt-left"></i></div>
        </div>
    </div>

    <!-- Checkout Form and Cart Items -->
    <div class="container">
        <div class="checkout-wrapper">
            <div class="left-column">
                <div class="checkout-form">
                    <h2>Shipping Address</h2>
                    <form id="checkoutForm">
                        <h3>Rama</h3>
                        <h5>Jalan Wonosari, Sadeyan,Srimulyo, Piyungan, Bantul,DIY</h5>
                    </form>
                </div>

                <div class="checkout-products">
                    <h2>Products</h2>
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                            </tr>
                        </thead>
                        <tbody id="cartItems">
                            <% products.forEach(function(product) { %>
                                <tr>
                                    <td>
                                        <div class="cart-info">
                                            <img src="<%= product.image %>" alt="<%= product.name %>" />
                                            <div>
                                                <p><%= product.name %></p>
                                                <span class="price">Price: Rp<%= product.price %></span> <br />
                                                <a href="#remove">remove</a>
                                                <form action="/products/buy" method="POST">
                                                    <input type="hidden" name="productId" value="<%= product._id %>" />
                                                    <button type="submit" class="btn checkout-btn">Bayar</button>
                                                </form>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="row">
            <div class="col d-flex">
                <h4>INFORMATION</h4>
                <a href="">About us</a>
                <a href="">Contact Us</a>
                <a href="">Term & Conditions</a>
                <a href="">Shipping Guide</a>
            </div>
            <div class="col d-flex">
                <h4>USEFUL LINK</h4>
                <a href="">Online Store</a>
                <a href="">Customer Services</a>
                <a href="">Promotion</a>
                <a href="">Top Brands</a>
            </div>
            <div class="col d-flex">
                <span><i class="bx bxl-facebook-square"></i></span>
                <span><i class="bx bxl-instagram-alt"></i></span>
                <span><i class="bx bxl-github"></i></span>
                <span><i class="bx bxl-twitter"></i></span>
                <span><i class="bx bxl-pinterest"></i></span>
            </div>
        </div>
    </footer>

    <script src="/js/cart.js"></script>
</body>
</html>
