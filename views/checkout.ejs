<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/checkout.css" />
    <title>Checkout</title>
</head>
<body>
    <!-- Navigation -->
    <div class="navigation">
        <div class="nav-center container d-flex">
            <a href="index.html" class="logo"><h1>Recysell</h1></a>
            <ul class="nav-list d-flex">
                <li class="nav-item"><a href="index.html" class="nav-link">Home</a></li>
                <li class="nav-item"><a href="product.html" class="nav-link">Shop</a></li>
                <li class="nav-item"><a href="#terms" class="nav-link">Terms</a></li>
                <li class="nav-item"><a href="#about" class="nav-link">About</a></li>
                <li class="nav-item"><a href="carbon.html" class="nav-link">Carbon</a></li>
                <li class="icons d-flex">
                    <a href="login.html" class="icon"><i class="bx bx-user"></i></a>
                    <div class="icon"><i class="bx bx-search"></i></div>
                    <div class="icon"><i class="bx bx-heart"></i><span class="d-flex">0</span></div>
                    <a href="cart.html" class="icon"><i class="bx bx-cart"></i><span class="d-flex">0</span></a>
                </li>
            </ul>
            <div class="icons d-flex">
                <a href="login.html" class="icon"><i class="bx bx-user"></i></a>
                <div class="icon"><i class="bx bx-search"></i></div>
                <div class="icon"><i class="bx bx-heart"></i><span class="d-flex">0</span></div>
                <a href="cart.html" class="icon"><i class="bx bx-cart"></i><span class="d-flex">0</span></a>
            </div>
            <div class="hamburger"><i class="bx bx-menu-alt-left"></i></div>
        </div>
    </div>

    <!-- Checkout Form and Cart Items -->
    <div class="container">
        <div class="checkout-wrapper">
            <div class="left-column">
                <div class="checkout-form">
                    <h2>Shipping Address</h2>
                    <form id="checkoutForm">
                        <h3>NAMA PENGGUNA</h3>
                        <h5>Jl. Wonosari</h5>
                    </form>
                </div>

                <div class="checkout-products">
                    <h2>Products</h2>
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Subtotal</th>
                                <th>Carbon</th>
                            </tr>
                        </thead>
                        <tbody id="cartItems">
                            <% products.forEach(function(product) { %>
                                <tr>
                                    <td>
                                        <div class="cart-info">
                                            <img src="<%= product.image %>" alt="<%= product.name %>" />
                                            <div>
                                                <p><%= product.name %></p>
                                                <span class="price">Price: Rp<%= product.price %></span> <br />
                                                <a href="#remove">remove</a>
                                            </div>
                                        </div>
                                    </td>
                                    <td><%= product.quantity %></td>
                                    <td class="subtotal">Rp<%= product.price * product.quantity %></td>
                                    <td></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="checkout-summary">
                <h2>Payment Summary</h2>
                <table>
                    <tr>
                        <td>Subtotal</td>
                        <td class="cart-subtotal"><h4>Rp<%= product.price * quantity %></h4></td>
                    </tr>
                    <tr>
                        <td>Tax</td>
                        <td class="cart-tax"><h4></h4></td>
                    </tr>
                    <tr>
                        <td>Total</td>
                        <td class="cart-total"><h4>Rp<%= product.price * quantity %></h4></td>
                    </tr>
                </table>
                <button type="submit" class="btn checkout-btn">Pilih Pembayaran</button>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="row">
            <div class="col d-flex">
                <h4>INFORMATION</h4>
                <a href="">About us</a>
                <a href="">Contact Us</a>
                <a href="">Term & Conditions</a>
                <a href="">Shipping Guide</a>
            </div>
            <div class="col d-flex">
                <h4>USEFUL LINK</h4>
                <a href="">Online Store</a>
                <a href="">Customer Services</a>
                <a href="">Promotion</a>
                <a href="">Top Brands</a>
            </div>
            <div class="col d-flex">
                <span><i class="bx bxl-facebook-square"></i></span>
                <span><i class="bx bxl-instagram-alt"></i></span>
                <span><i class="bx bxl-github"></i></span>
                <span><i class="bx bxl-twitter"></i></span>
                <span><i class="bx bxl-pinterest"></i></span>
            </div>
        </div>
    </footer>

    <script src="/js/cart.js"></script>
</body>
</html>
